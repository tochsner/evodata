{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "experiment",
    "paper",
    "files",
    "samples",
    "trees",
    "evolutionaryModel",
    "metadata"
  ],
  "properties": {
    "experiment": {
      "type": "object",
      "required": ["id", "title", "origin", "doi", "uploadDate", "license"],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "origin": { "type": "string" },
        "doi": { "type": "string", "format": "uri" },
        "uploadDate": { "type": "string", "format": "date" },
        "license": {
          "const": "CC0"
        }
      }
    },
    "paper": {
      "type": "object",
      "required": ["id", "title", "authors", "abstract", "bibtex", "doi"],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "authors": {
          "type": "array",
          "items": { "type": "string" }
        },
        "abstract": { "type": "string" },
        "bibtex": { "type": "string" },
        "doi": { "type": "string", "format": "uri" },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "type",
          "version",
          "sizeBytes",
          "localPath",
          "remotePath",
          "md5"
        ],
        "properties": {
          "name": { "type": "string" },
          "type": {
            "type": "string",
            "enum": [
              "beast2Configuration",
              "beast2PosteriorLogs",
              "beast2PosteriorTrees",
              "summaryTree",
              "codephyModel",
              "evoDataExperiment"
            ]
          },
          "version": { "type": "integer" },
          "sizeBytes": { "type": "integer" },
          "localPath": { "type": "string" },
          "remotePath": { "type": "string", "format": "uri" },
          "md5": { "type": "string" }
        }
      }
    },
    "samples": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "scientificName", "type", "classification", "data"],
        "properties": {
          "id": { "type": "string" },
          "scientificName": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["species", "cell", "language", "other"]
          },
          "classification": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "length", "data"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "rna",
                    "dna",
                    "aminoAcids",
                    "phasedDiploidDna",
                    "traits"
                  ]
                },
                "length": { "type": "integer" },
                "data": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "trees": {
      "type": "object",
      "required": [
        "numberOfTrees",
        "numberOfTips",
        "ultrametric",
        "rooted",
        "ccd1Entropy",
        "treeEss",
        "ccd0MapTree",
        "hipstrTree",
        "leafToSampleMap",
        "averageRootAgeYears"
      ],
      "properties": {
        "numberOfTrees": { "type": "string" },
        "numberOfTips": { "type": "integer" },
        "ultrametric": { "type": "boolean" },
        "rooted": { "type": "boolean" },
        "ccd1Entropy": { "type": "number" },
        "treeEss": { "type": "integer" },
        "ccd0MapTree": { "type": "string" },
        "hipstrTree": { "type": "string" },
        "averageRootAgeYears": { "type": "number" },
        "leafToSampleMap": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },
    "evolutionaryModel": {
      "type": "object",
      "required": ["models"],
      "properties": {
        "models": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "type", "documentationUrl"],
            "properties": {
              "name": { "type": "string" },
              "type": {
                "type": "string",
                "enum": [
                  "substitutionModel",
                  "clockModel",
                  "treePrior",
                  "treeLikelihood",
                  "other"
                ]
              },
              "documentationUrl": { "type": "string", "format": "uri" }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["EvoDataPipelineVersion", "EvoDataPipelineHash"],
      "properties": {
        "EvoDataPipelineVersion": { "type": "string" },
        "EvoDataPipelineHash": { "type": "string" }
      }
    }
  }
}
